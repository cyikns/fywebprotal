<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.ncufz.webprotal.dao.UserMapper">
    <select id="findUserById" parameterType="integer" resultType="cn.ncufz.webprotal.common.pojo.User">
        select uid,username from oa_user where uid=#{value}
    </select>
</mapper>